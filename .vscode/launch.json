{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:5502",
            "webRoot": "${workspaceFolder}/htdocs"
        },
        {
            "name": "Statistiken (Edge)",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:5502/statistics.html",
            "webRoot": "${workspaceFolder}/htdocs"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:5502",
            "webRoot": "${workspaceFolder}/htdocs",
            "sourceMaps": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch API-Docs",
            "url": "http://localhost:5502/api_documentation.html",
            "webRoot": "${workspaceFolder}/htdocs"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch embedded Java-Online",
            "url": "http://localhost:5502/htdocs/embedded.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Convert SVGs",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/development/svgencoder.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        },
        {
            "name": "Generate Spritesheet",
            "program": "${workspaceFolder}/src/development/spritesheetgenerator.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}